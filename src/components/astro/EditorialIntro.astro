---
import AboutSlider from "@/components/react/AboutSlider";
import { ui } from "@/i18n";

interface Props {
  id?: string;
  lang?: "en" | "es";
}

const { id, lang = "en" } = Astro.props as Props;
const t = ui[lang] ?? ui.en;
const title = t["editorial.title"];
const intro = t["editorial.intro"];
const paragraphs = [
  t["editorial.p1"],
  t["editorial.p2"],
  t["editorial.p3"],
  t["editorial.p4"],
  t["editorial.p5"],
];
---

<section id={id} class="relative overflow-hidden">
  <!-- Version Mobile/Tablet : empilement vertical -->
  <div class="lg:hidden">
    <!-- Texte en haut -->
    <div class="bg-gradient-to-br from-sand to-mist/60 px-6 py-12 sm:px-8 sm:py-16">
      <div class="max-w-2xl mx-auto space-y-4 sm:space-y-6">
        <h2 class="text-xl sm:text-2xl uppercase tracking-[0.10em] text-dusk font-semibold">{title}</h2>
        <p class="text-3xl leading-[1.05] sm:text-4xl md:text-5xl font-serif text-dusk">
          {intro}
        </p>
        {paragraphs.map((paragraph, index) => (
          <p class="text-base sm:text-lg leading-relaxed text-ink/80" key={index}>{paragraph}</p>
        ))}
      </div>
    </div>
    
    <!-- Slider en bas avec hauteur fixe -->
    <div class="relative h-[500px] sm:h-[600px]">
      <AboutSlider client:visible lang={lang} />
    </div>
  </div>

  <!-- Version Desktop : côte à côte -->
  <div class="hidden lg:grid lg:grid-cols-[1fr,2fr] lg:h-screen lg:min-h-[700px]">
    <!-- Texte à gauche -->
    <div class="relative flex items-center bg-gradient-to-br from-sand to-mist/60 px-12">
      <div class="w-full space-y-6">
        <h2 class="text-2xl uppercase tracking-[0.10em] text-dusk font-semibold">{title}</h2>
        <p class="text-5xl xl:text-6xl leading-[1.05] font-serif text-dusk">
          {intro}
        </p>
        {paragraphs.map((paragraph, index) => (
          <p class="text-lg leading-relaxed text-ink/80" key={index}>{paragraph}</p>
        ))}
      </div>
    </div>

    <!-- Slider à droite -->
    <div class="relative h-full">
      <AboutSlider client:visible lang={lang} />
    </div>
  </div>
</section>
