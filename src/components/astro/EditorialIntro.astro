---
import AboutSlider from "@/components/react/AboutSlider";
import { getLangFromUrl, useTranslations } from "@/i18n";

interface Props {
  id?: string;
}

const { id } = Astro.props as Props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id={id} class="relative overflow-hidden">
  <!-- Version Mobile/Tablet : empilement vertical -->
  <div class="lg:hidden">
    <!-- Texte en haut -->
    <div class="bg-gradient-to-br from-sand to-mist/60 px-6 py-12 sm:px-8 sm:py-16">
      <div class="max-w-2xl mx-auto space-y-4 sm:space-y-6">
        <h2 class="text-xl sm:text-2xl uppercase tracking-[0.10em] text-dusk font-semibold">{t('editorial.title')}</h2>
        <p class="text-3xl leading-[1.05] sm:text-4xl md:text-5xl font-serif text-dusk">
          {t('editorial.intro')}
        </p>
        <p class="text-base sm:text-lg leading-relaxed text-ink/80">
          {t('editorial.p1')}
        </p>
        <p class="text-base sm:text-lg leading-relaxed text-ink/80">
          {t('editorial.p2')}
        </p>
      </div>
    </div>
    
    <!-- Slider en bas avec hauteur fixe -->
    <div class="relative h-[500px] sm:h-[600px]">
      <AboutSlider client:visible />
    </div>
  </div>

  <!-- Version Desktop : côte à côte -->
  <div class="hidden lg:grid lg:grid-cols-[1fr,2fr] lg:h-screen lg:min-h-[700px]">
    <!-- Texte à gauche -->
    <div class="relative flex items-center bg-gradient-to-br from-sand to-mist/60 px-12">
      <div class="w-full space-y-6">
        <h2 class="text-2xl uppercase tracking-[0.10em] text-dusk font-semibold">{t('editorial.title')}</h2>
        <p class="text-5xl xl:text-6xl leading-[1.05] font-serif text-dusk">
          {t('editorial.intro')}
        </p>
        <p class="text-lg leading-relaxed text-ink/80">
          {t('editorial.p1')}
        </p>
        <p class="text-lg leading-relaxed text-ink/80">
          {t('editorial.p2')}
        </p>
      </div>
    </div>

    <!-- Slider à droite -->
    <div class="relative h-full">
      <AboutSlider client:visible />
    </div>
  </div>
</section>
