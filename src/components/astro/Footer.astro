---
interface Props {
  id?: string;
}

const { id } = Astro.props as Props;
---

<footer id={id} class="bg-sand py-16 border-t border-dusk/10">
  <div class="max-w-7xl mx-auto px-6">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-12">
      <!-- Logo centré en haut sur mobile, colonne 1 sur desktop -->
      <div class="flex justify-center md:justify-start">
        <div class="w-48 h-48 flex items-center justify-center">
          <img src="/logo/logo.jpg" alt="Murmullo" class="w-full h-full object-contain" />
        </div>
      </div>

      <!-- El Murmullo Links -->
      <div>
        <h3 class="text-lg font-semibold text-dusk mb-4">El Murmullo</h3>
        <ul class="space-y-2">
          <li><a href="/" class="text-ink/70 hover:text-dusk transition">Home</a></li>
          <li><a href="#suites" class="text-ink/70 hover:text-dusk transition">Suites</a></li>
          <li><a href="#activities" class="text-ink/70 hover:text-dusk transition">Activities</a></li>
          <li><a href="#contact" class="text-ink/70 hover:text-dusk transition">Contact</a></li>
          <li><a href="/privacy" class="text-ink/70 hover:text-dusk transition">Privacy Notice</a></li>
        </ul>
      </div>

