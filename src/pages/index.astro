---
import BaseLayout from "@/layouts/BaseLayout.astro";
import HeroSlider from "@/components/react/HeroSlider";
import EditorialIntro from "@/components/astro/EditorialIntro.astro";
import EmbracedBySeaSlider from "@/components/react/EmbracedBySeaSlider";
import FusionCuisineSlider from "@/components/react/FusionCuisineSlider";

const title = "El Murmullo â€” Luxury Private Villas in Zihuatanejo, Mexico | La Casa Que Canta";
const description =
  "Exclusive luxury private villas in Zihuatanejo, Mexico by La Casa Que Canta. Experience privacy, ocean views, and refined Mexican design.";
const ogImage = "/images/hero/el-murmullo0.webp";
const preloadImages = [
  "/images/hero/el-murmullo0.webp",
  "/images/hero/el-murmullo1.webp",
  "/images/hero/el-murmullo2.webp",
];

const structuredData = {
  "@context": "https://schema.org",
  "@type": "Resort",
  name: "El Murmullo",
  url: "https://murmullo.studio",
  description,
  telephone: "+52 984 000 2024",
  image: [
    "https://murmullo.studio/images/hero/el-murmullo0.webp",
    "https://murmullo.studio/images/hero/el-murmullo1.webp",
    "https://murmullo.studio/images/hero/el-murmullo2.webp",
  ],
  address: {
    "@type": "PostalAddress",
    streetAddress: "Carretera Tulum-Boca Paila KM 7",
    addressLocality: "Tulum",
    addressRegion: "Quintana Roo",
    postalCode: "77780",
    addressCountry: "MX",
  },
  geo: {
    "@type": "GeoCoordinates",
    latitude: 20.121,
    longitude: -87.461,
  },
  amenityFeature: [
    { "@type": "LocationFeatureSpecification", name: "Heated Pool", value: true },
    { "@type": "LocationFeatureSpecification", name: "On-site Dining", value: true },
    { "@type": "LocationFeatureSpecification", name: "Wellness & Spa", value: true },
    { "@type": "LocationFeatureSpecification", name: "High-Speed Wi-Fi", value: true },
  ],
  sameAs: ["https://www.instagram.com", "https://www.pinterest.com"],
};
---

<BaseLayout
  title={title}
  description={description}
  ogImage={ogImage}
  preloadImages={preloadImages}
  structuredData={structuredData}
>
  <script is:inline>
    if (window.location.hash && window.location.hash.startsWith("#contact")) {
      window.location.replace("/contact");
    }
  </script>
  <section id="home" class="relative h-screen">
    <HeroSlider client:visible lang="en" />
  </section>

  <EditorialIntro id="maison" />

  <FusionCuisineSlider client:visible lang="en" />

  <EmbracedBySeaSlider client:visible lang="en" />
</BaseLayout>
