---
import BaseLayout from "@/layouts/BaseLayout.astro";
import HeroSlider from "@/components/react/HeroSlider";
import EditorialIntro from "@/components/astro/EditorialIntro.astro";
import EmbracedBySeaSlider from "@/components/react/EmbracedBySeaSlider";
import FusionCuisineSlider from "@/components/react/FusionCuisineSlider";

const title = "Murmullo Casa • Maison-hôtel entre jungle et mer";
const description =
  "Maison-hôtel intimiste sur la Riviera Maya : suites baignées de lumière, piscines lentes, cuisine solaire et hospitalité discrète.";
const ogImage = "/images/hero/el-murmullo0.webp";
const preloadImages = [
  "/images/hero/el-murmullo0.webp",
  "/images/hero/el-murmullo1.webp",
  "/images/hero/el-murmullo2.webp",
];

const structuredData = {
  "@context": "https://schema.org",
  "@type": "Hotel",
  name: "Murmullo Casa",
  url: "https://murmullo.studio",
  description,
  telephone: "+52 984 000 2024",
  image: [
    "https://murmullo.studio/images/hero/el-murmullo0.webp",
    "https://murmullo.studio/images/hero/el-murmullo1.webp",
    "https://murmullo.studio/images/hero/el-murmullo2.webp",
  ],
  address: {
    "@type": "PostalAddress",
    streetAddress: "Carretera Tulum-Boca Paila KM 7",
    addressLocality: "Tulum",
    addressRegion: "Quintana Roo",
    postalCode: "77780",
    addressCountry: "MX",
  },
  geo: {
    "@type": "GeoCoordinates",
    latitude: 20.121,
    longitude: -87.461,
  },
  amenityFeature: [
    { "@type": "LocationFeatureSpecification", name: "Piscine chauffée", value: true },
    { "@type": "LocationFeatureSpecification", name: "Restauration sur place", value: true },
    { "@type": "LocationFeatureSpecification", name: "Bien-être et massages", value: true },
    { "@type": "LocationFeatureSpecification", name: "Wi-Fi haute vitesse", value: true },
  ],
  sameAs: ["https://www.instagram.com", "https://www.pinterest.com"],
};
---

<BaseLayout
  title={title}
  description={description}
  ogImage={ogImage}
  preloadImages={preloadImages}
  structuredData={structuredData}
>
  <script is:inline>
    if (window.location.hash && window.location.hash.startsWith("#contact")) {
      window.location.replace("/contact");
    }
  </script>
  <section class="relative h-screen">
    <HeroSlider client:visible />
  </section>

  <EditorialIntro id="maison" />

  <FusionCuisineSlider client:visible />

  <EmbracedBySeaSlider client:visible />
</BaseLayout>
